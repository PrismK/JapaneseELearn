<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent"
    android:id="@+id/ll_popupbutton"
    android:gravity="bottom">

    <LinearLayout
        android:id="@+id/ll_popupbutton_none"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/popupbtn_third"
            android:layout_width="match_parent"
            android:layout_height="@dimen/linearlayout_height"
            android:background="@drawable/selector_item_click"
            android:gravity="center"
            android:text="保存图片"
            android:textColor="@color/gray6"
            android:textSize="@dimen/all_tv_textSize"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/gray1"/>

        <Button
            android:id="@+id/popupbtn_second"
            android:layout_width="match_parent"
            android:layout_height="@dimen/linearlayout_height"
            android:background="@drawable/selector_item_click"
            android:gravity="center"
            android:text="从手机相册选择"
            android:textColor="@color/gray6"
            android:visibility="gone"
            android:textSize="@dimen/all_tv_textSize" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/gray1"/>

        <Button
            android:id="@+id/popupbtn_first"
            android:layout_width="match_parent"
            android:layout_height="@dimen/linearlayout_height"
            android:background="@drawable/selector_item_click"
            android:gravity="center"
            android:text="从空间相册选择"
            android:visibility="gone"
            android:textColor="@color/gray6"
            android:textSize="@dimen/all_tv_textSize" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/gray1"/>
        <Button
            android:id="@+id/popupbtn_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/linearlayout_height"
            android:background="@drawable/selector_item_click"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/gray6"
            android:textSize="@dimen/all_tv_textSize"
            />
    </LinearLayout>
</LinearLayout>
