<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_classes"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"

        >
        <!--标题以及简介-->
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <!--标题-->
                <TextView
                    android:id="@+id/tv_classes_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="逮虾户"
                    android:textSize="18dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/pureBlack"
                    />
                <!--VIP-->
                <ImageView
                    android:id="@+id/iv_vip"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:src="@mipmap/vip"
                    />
            </LinearLayout>
            <!--时间-->
            <TextView
                android:id="@+id/tv_pubdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2018-10-1"
                />
            <LinearLayout
                android:id="@+id/ll_classes_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <!--简介-->
                <TextView
                    android:id="@+id/tv_classes_description"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="你欠下巨债连夜驾车落跑，身后就是追杀你的仇家。路过岔道面前有两条路让你选择：一是直达另一个城市的高速直道，但对方的车马力比你更大，有可能被对方追上。二是湾多险恶的延绵山路，只要技术过硬就可能甩掉对方。正在你犯难之际，电台里响起了这首歌，你握了握方向盘，心中便有了答案。。。" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="0.3"
                    />

            </LinearLayout>


        </LinearLayout>
        <!--视频缩略图-->
        <ImageView
            android:id="@+id/iv_class_des"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/ll_classes_description"
            android:layout_alignTop="@id/tv_classes_title"
            tools:ignore="NotSibling" />

    </RelativeLayout>





</LinearLayout>