<?xml version="1.0" encoding="utf-8"?>

<com.prismk.japaneseelearn.widgets.Title
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/widget_title_height"
    android:background="@color/titleBg">

    <ProgressBar
        android:id="@+id/pb_title_pending"
        style="@android:style/Widget.ProgressBar.Small.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/widget_title_margin_small"
        android:layout_marginRight="@dimen/widget_title_margin_small"
        android:layout_toLeftOf="@+id/titleName"
        android:layout_toStartOf="@+id/titleName"
        android:indeterminateBehavior="repeat"
        android:indeterminateDrawable="@drawable/dialog_loading"
        android:indeterminateOnly="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/titleName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        android:maxEms="10"
        android:maxLines="1"
        android:textColor="@color/titleTextColor"
        android:textSize="@dimen/widget_title_textsize" />

    <LinearLayout
        android:id="@+id/titleBackLayout"
        android:layout_width="@dimen/widget_title_back_layout_width"
        android:layout_height="match_parent"
        android:gravity="center|left"
        android:minWidth="@dimen/widget_title_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/titleBackImg"
            android:layout_width="@dimen/widget_title_icon_size"
            android:layout_height="@dimen/widget_title_icon_size"
            android:layout_marginLeft="@dimen/widget_title_margin_left"
            android:padding="@dimen/widget_title_padding"
            android:src="@drawable/selector_btn_titleback" />

        <TextView
            android:id="@+id/titleBackName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/titleTextColor"
            android:textSize="@dimen/widget_title_lateral_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/titleRightLayout2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:minWidth="@dimen/widget_title_height"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/titleRightImg2"
                android:layout_width="@dimen/widget_title_right_icon_size"
                android:layout_height="@dimen/widget_title_right_icon_size"
                android:layout_margin="@dimen/widget_title_icon_margin"
                android:padding="@dimen/widget_title_padding"
                android:src="@drawable/selector_btn_titleback" />

            <TextView
                android:id="@+id/titleRight2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:color="@color/selector_titletext_themelight"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="@dimen/widget_title_lateral_size"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/titleRightLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:minWidth="@dimen/widget_title_height"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/titleRightImg"
                android:layout_width="@dimen/widget_title_right_icon_size"
                android:layout_height="@dimen/widget_title_right_icon_size"
                android:layout_marginRight="@dimen/widget_title_margin_left"
                android:padding="@dimen/widget_title_padding"
                android:layout_margin="5dp"
                android:src="@drawable/selector_btn_titleback"
                android:visibility="gone" />

            <TextView
                android:id="@+id/titleRight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:color="@color/selector_titletext_themelight"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="@dimen/widget_title_lateral_size" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/titleCustomLayoutAear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/titleBackLayout"
        android:visibility="gone">

    </RelativeLayout>

    <View
        android:id="@+id/titleDivider"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white" />

</com.prismk.japaneseelearn.widgets.Title>
