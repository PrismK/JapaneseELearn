<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <FrameLayout
        android:id="@+id/fl_fragmentOfTeacher"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom">

            <LinearLayout
                android:id="@+id/ll_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imv_home"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:src="@mipmap/home_select"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/tv_home"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="首页"
                    android:gravity="center_horizontal"
                    android:textColor="@color/blueMain"
                    android:textSize="12dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_me"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imv_me"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:src="@mipmap/me"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/tv_me"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="我的"
                    android:gravity="center_horizontal"
                    android:textColor="#707070"
                    android:textSize="12dp"/>

            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/imb_addResource"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/teacher_add"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="30dp"/>

</FrameLayout>