<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/status_bar_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_zero" />

    <include layout="@layout/layout_widget_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="请输入手机号码"
            android:textSize="10dp" />

        <ImageButton
            android:layout_width="@dimen/activity_login_usericon_marginleft"
            android:layout_height="@dimen/activity_login_usericon_marginleft"
            android:layout_gravity="right|center"
            android:layout_marginRight="@dimen/activity_login_usericon_marginleft"
            android:background="@mipmap/clear_content"
            android:onClick="onViewClick"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edt_reset_username"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_background_input"
            android:hint="请输入手机号码"
            android:paddingLeft="15dp"
            android:inputType="number"
            android:maxLength="11"
            android:textSize="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="输入旧密码："
            android:textSize="10dp" />

        <ImageButton
            android:layout_width="@dimen/activity_login_usericon_marginleft"
            android:layout_height="@dimen/activity_login_usericon_marginleft"
            android:layout_gravity="right|center"
            android:layout_marginRight="@dimen/activity_login_usericon_marginleft"
            android:background="@mipmap/clear_content"
            android:onClick="onViewClick"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edt_reset_oldpw"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_background_input"
            android:hint="请输入旧密码"
            android:paddingLeft="15dp"
            android:inputType="textPassword"
            android:textSize="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="输入新密码："
            android:textSize="10dp" />

        <ImageButton
            android:layout_width="@dimen/activity_login_usericon_marginleft"
            android:layout_height="@dimen/activity_login_usericon_marginleft"
            android:layout_gravity="right|center"
            android:layout_marginRight="@dimen/activity_login_usericon_marginleft"
            android:background="@mipmap/clear_content"
            android:onClick="onViewClick"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edt_reset_newpw"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_background_input"
            android:hint="请输入新密码"
            android:paddingLeft="15dp"
            android:inputType="textPassword"
            android:textSize="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="确认新密码："
            android:textSize="10dp" />

        <ImageButton
            android:layout_width="@dimen/activity_login_usericon_marginleft"
            android:layout_height="@dimen/activity_login_usericon_marginleft"
            android:layout_gravity="right|center"
            android:layout_marginRight="@dimen/activity_login_usericon_marginleft"
            android:background="@mipmap/clear_content"
            android:onClick="onViewClick"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edt_reset_renewpw"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_background_input"
            android:hint="请确认新密码"
            android:paddingLeft="15dp"
            android:inputType="textPassword"
            android:textSize="12dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_reset_ok"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_background_login"
        android:text="确认修改"
        android:textColor="#fff"
        android:textSize="12dp"
        android:onClick="onViewClick"/>

</LinearLayout>
