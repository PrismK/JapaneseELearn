<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SlidingLayout">
        <attr name="background_view" format="reference" />
        <attr name="sliding_mode" format="enum">
            <enum name="both" value="0" />
            <enum name="top" value="1" />
            <enum name="bottom" value="2" />
        </attr>
        <attr name="sliding_pointer_mode" format="enum">
            <enum name="one" value="0" />
            <enum name="more" value="1" />
        </attr>
        <attr name="top_max" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="shape" format="integer"/>

        <attr name="border" format="boolean"/>
        <attr name="border_width" format="dimension"/>
        <attr name="border_color" format="color"/>
        <attr name="rect_roundcorner" format="dimension"/>

        <attr name="shadow" format="boolean"/>
        <attr name="shadow_width" format="dimension"/>
        <attr name="shadow_color_star" format="color"/>
        <attr name="shadow_color_midd" format="color"/>
        <attr name="shadow_color_end" format="color"/>

    </declare-styleable>

    <declare-styleable name="easy_flip_view">
        <attr name="flipOnTouch" format="boolean"/>
        <attr name="flipDuration" format="integer"/>
        <attr name="flipType" format="string"/>
        <attr name="flipFrom" format="string"/>
        <attr name="flipEnabled" format="boolean"/>
        <attr name="flipOnceEnabled" format="boolean"/>
        <attr name="autoFlipBack" format="boolean"/>
        <attr name="autoFlipBackTime" format="integer"/>
        <attr name="animFlipInId" format="reference"/>
        <attr name="animFlipOutId" format="reference"/>
    </declare-styleable>

    <declare-styleable name="AnimationView">
        <attr name="a_in" format="float"/>
        <attr name="a_out" format="float"/>
        <attr name="x_in" format="float"/>
        <attr name="x_out" format="float"/>
        <attr name="y_in" format="float"/>
        <attr name="y_out" format="float"/>
    </declare-styleable>

</resources>